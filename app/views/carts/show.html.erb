<p id="notice"><%= notice %></p>

<h2>Tu carro de la compra</h2>
<table>
  <% @cart.line_items.each do |item| %>
    <tr>
	<td><%= item.quantity %>&times;</td>
	<td><%= item.product.title %></td>
	<td class="item_price"><%= number_to_currency(item.total_price, :unit => "&euro;", :separator => ",", :delimiter => "", :format => "%n %u") %></td>
    </tr>
  <% end %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price, :unit => "&euro;", :separator => ",", :delimiter => "", :format => "%n %u") %></td>

  </tr>
</table>

<%= button_to 'Vaciar carrito', @cart, :method=> :delete, :confirm => 'Estas seguro?' %> |
<%= link_to 'Back', products_path %>
